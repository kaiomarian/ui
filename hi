
const readline = require('readline');

const rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
});

// Função para converter moeda
function converterMoeda(valor, taxaDeCambio) {
    return valor * taxaDeCambio;
}

// Função para converter unidades métricas
function converterMetrico(valor, unidadeOrigem, unidadeDestino) {
    if (unidadeOrigem === "metros" && unidadeDestino === "quilômetros") {
        return valor / 1000;
    } else if (unidadeOrigem === "quilômetros" && unidadeDestino === "metros") {
        return valor * 1000;
    }
    return "Unidades inválidas";
}

// Função para calcular IMC
function calcularIMC(peso, altura) {
    return peso / (altura * altura);
}

// Menu principal
function menu() {
    console.log("\nEscolha uma opção:");
    console.log("1. Conversor de Moedas");
    console.log("2. Conversor Métrico");
    console.log("3. Cálculo do IMC");
    console.log("4. Sair");

    rl.question("Opção: ", (opcao) => {
        switch (opcao) {
            case '1':
                rl.question("Digite o valor: ", (valor) => {
                    rl.question("Digite a taxa de câmbio: ", (taxaDeCambio) => {
                        const resultado = converterMoeda(parseFloat(valor), parseFloat(taxaDeCambio));
                        console.log(`Resultado: ${resultado}`);
                        menu();
                    });
                });
                break;
            case '2':
                rl.question("Digite o valor: ", (valor) => {
                    rl.question("Digite a unidade de origem (metros/quilômetros): ", (unidadeOrigem) => {
                        rl.question("Digite a unidade de destino (metros/quilômetros): ", (unidadeDestino) => {
                            const resultado = converterMetrico(parseFloat(valor), unidadeOrigem, unidadeDestino);
                            console.log(`Resultado: ${resultado}`);
                            menu();
                        });
                    });
                });
                break;
            case '3':
                rl.question("Digite o peso (kg): ", (peso) => {
                    rl.question("Digite a altura (m): ", (altura) => {
                        const imc = calcularIMC(parseFloat(peso), parseFloat(altura));
                        console.log(`IMC: ${imc.toFixed(2)}`);
                        menu();
                    });
                });
                break;
            case '4':
                console.log("Saindo...");
                rl.close();
                break;
            default:
                console.log("Opção inválida. Tente novamente.");
                menu();
                break;
        }
    });
}

// Iniciar o menu
menu();
